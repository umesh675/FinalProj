<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="144dp"

        android:orientation="horizontal" android:layout_marginTop="9dp"
        android:elevation="5dp" app:circularflow_radiusInDP="5dp">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="250dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/coregan" android:id="@+id/imageView"
                    android:layout_weight="1" android:scaleType="centerCrop"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center_vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" android:id="@+id/name" android:textColor="@color/black"
                        android:textColorHint="#3F51B5" android:layout_marginStart="12dp" android:textStyle="bold"
                        android:textSize="24sp" android:text="Coragen"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="57dp"
                            android:layout_height="match_parent" android:id="@+id/orderMainPrize" android:layout_weight="1"
                            android:text="Prize" android:layout_marginLeft="12dp"
                            android:textColor="@android:color/holo_red_dark" android:textStyle="bold"/>
                    <TextView
                            android:text="/-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"
                            android:textColor="@android:color/holo_red_dark" android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                        android:text="Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/description"
                        android:textColor="@color/black" android:paddingLeft="10dp" android:paddingTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>