<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HelpActivity" android:background="@color/purple_200">

    <TextView
            android:text="Help Line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6" android:textStyle="bold"
            android:textColor="@color/black" android:textSize="20dp" android:layout_gravity="center"
            android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <TextView
                android:text="Agriculture Doctors Contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView12" android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="16dp" android:layout_marginLeft="80dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="10dp">
            <TextView
                    android:text="Contact No : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView13" android:layout_weight="0"
                    android:textColor="@color/black" android:textSize="16dp" android:layout_marginLeft="80dp"/>
            <TextView
                    android:text="8105231622"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView14" android:layout_weight="0"
                    android:textColor="@color/black" android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="2dp">
            <TextView
                    android:text="Contact No : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView15" android:layout_weight="0"
                    android:textColor="@color/black" android:textSize="16dp" android:layout_marginLeft="80dp"/>
            <TextView
                    android:text="9485756780"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView16" android:layout_weight="0"
                    android:textColor="@color/black" android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <TextView
                android:text="Technical Issue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView17" android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="16dp" android:layout_marginLeft="80dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="10dp">
            <TextView
                    android:text="Contact No : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView18" android:layout_weight="0"
                    android:textColor="@color/black" android:textSize="16dp" android:layout_marginLeft="80dp"/>
            <TextView
                    android:text="8619970608"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView19" android:layout_weight="0"
                    android:textColor="@color/black" android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>