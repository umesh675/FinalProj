<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".OrderActivity">

    <TextView
            android:text="Order Bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="18dp"
            android:textColor="@color/black" android:textStyle="bold" android:layout_gravity="center"
            android:layout_marginTop="5dp"/>
    <TextView
            android:text="Total Amount: 0/-"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/totalAmount" android:gravity="right"
            android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark" android:textSize="16dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/ordersRecyclerView"
            tools:listitem="@layout/order_sample">
    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>